{% block form_errors %}
    {% if errors|length > 0 %}
        {% if compound %}
            {# ... display the global form errors #}
            <ul>
                {% for error in errors %}
                    <li><mark>{{ error.message }}</mark></li>
                {% endfor %}
            </ul>
        {% else %}
            {# ... display the errors for a single field #}
            <ul>
                {% for error in errors %}
                    <li><mark>{{ error.message }}</mark></li>
                {% endfor %}
            </ul>
        {% endif %}
    {% endif %}
{% endblock form_errors %}